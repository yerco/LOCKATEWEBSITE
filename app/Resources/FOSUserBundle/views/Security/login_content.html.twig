{%- trans_default_domain 'FOSUserBundle' -%}

{%- if error -%}
    <div>{{- error.messageKey|trans(error.messageData, 'security') -}}</div>
{%- endif -%}

<div class="login-panel panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Lock-8</h3>
        <a href="{{ app.request.uri }}es">
            <img border="0" alt="Spanish" src="{{- asset('images/es.png') -}}" >
        </a>
        <a href="{{ app.request.uri }}en">
            <img border="0" alt="Spanish" src="{{- asset('images/gb.png') -}}" >
        </a>
    </div>
    <div class="panel-body" id="login-main-frame">

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <fieldset>
                <div class="form-group">
                    {%- if csrf_token -%}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    {%- endif -%}
                </div>
                <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                           autocomplete="username"/>
                </div>
                <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required" autocomplete="current-password"/>
                </div>
                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>
                <div class="form-group">
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
                </div>
            </fieldset>
        </form>
    </div>
</div>