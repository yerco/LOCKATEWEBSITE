{%- trans_default_domain 'FOSUserBundle' -%}

{%- if error -%}
    <div>{{- error.messageKey|trans(error.messageData, 'security') -}}</div>
{%- endif -%}

<div class="login-panel panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"  style="display: inline-block; padding:0 0 0 33%;">Lock8</h3>
        {# ############# FLAGS ############# #}
        <span style="position: absolute; right: 30px; margin-top:10px;">
            <a href="{{ url('lockate_site_homepage') }}es">
                <img border="0" alt="Spanish" src="{{- asset('images/es.png') -}}" >
            </a>
            <a href="{{ url('lockate_site_homepage') }}en">
                <img border="0" alt="Spanish" src="{{- asset('images/gb.png') -}}" >
            </a>
        </span>
    </div>
    <div class="panel-body" id="login-main-frame">

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <fieldset>
                <div class="form-group">
                    {%- if csrf_token -%}
                        <input type="hidden" class="form-control" name="_csrf_token" value="{{ csrf_token }}"/>
                    {%- endif -%}
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="{{ 'security.login.username'|trans }}" id="username" name="_username" value="{{ last_username }}" required="required"
                           autocomplete="username"  autofocus="autofocus"/>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" id="password" name="_password" required="required" autocomplete="current-password"/>
                </div>
                <div class="form-group">

                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>  {{ 'security.login.remember_me'|trans }}</input>

                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-success btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
                </div>
            </fieldset>
        </form>
    </div>
</div>
